<table class="table table-bordered">
  <tbody>
  <tr>
    <th>ファイル名</th>
    <td>
      <input type="text" name="fileName" id="fileName" placeholder="document" value="{{ page.fileName }}" class="form-control"/>
      <small class="text-danger">半角英字ハイフンのみ 50文字以内</small>
    </td>
  </tr>
  <tr>
    <th>名称</th>
    <td>
      <input type="text" name="name" id="name" placeholder="document" value="{{ page.name }}" class="form-control"/>
      <small class="text-danger">50文字以内</small>
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <textarea name="description" id="description" cols="30" rows="10" class="form-control">{{ page.description }}</textarea>
    </td>
  </tr>
  </tbody>
</table>
<input type="submit" value="登録" class="btn btn-primary"/>